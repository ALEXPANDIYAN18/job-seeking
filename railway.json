{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn build app --prod"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "yarn start app --host 0.0.0.0 --port ${PORT-3001} --prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
